@{
    @model netexam.Models.login
    


    ViewData["Title"] = "Login Page";
    <form asp-action="checkCredentials" method="post">
                EmailID:
                @Html.TextBoxFor(l => l.EmailId, new { @class="form-control"})
                Password:
                @Html.PasswordFor(l => l.Password, new { @class="form-control"})
                <input type="submit" value="Submit" />
    </form>

    <p style = "color:red">@ViewBag.prompt </p>


}